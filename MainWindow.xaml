<Window x:Class="MathEditorStandalone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Editor - Open Source MATLAB Alternative" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Panel izquierdo - Editor de Script -->
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#2D2D30">
                <TextBlock Text="Script Editor" 
                          Foreground="White" 
                          Padding="10,5" 
                          FontWeight="Bold"/>
                <Button x:Name="RunButton" 
                        Content="â–¶ Run" 
                        Background="#0078d4" 
                        Foreground="White" 
                        Padding="10,5" 
                        Margin="5,2" 
                        Click="RunButton_Click"/>
                <Button x:Name="ClearButton" 
                        Content="ðŸ—‘ Clear" 
                        Background="#d13438" 
                        Foreground="White" 
                        Padding="10,5" 
                        Margin="5,2" 
                        Click="ClearButton_Click"/>
            </StackPanel>
            
            <TextBox x:Name="ScriptEditor"
                     Background="#1E1E1E"
                     Foreground="#DCDCDC"
                     FontFamily="Consolas"
                     FontSize="14"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     TextWrapping="NoWrap"/>
        </DockPanel>
        
        <!-- Separador -->
        <GridSplitter Grid.Column="1" 
                     HorizontalAlignment="Stretch" 
                     Background="#3F3F46"/>
        
        <!-- Panel derecho - Salida MatemÃ¡tica -->
        <DockPanel Grid.Column="2">
            <TextBlock DockPanel.Dock="Top" 
                      Text="Mathematical Output" 
                      Background="#2D2D30" 
                      Foreground="White" 
                      Padding="10,5" 
                      FontWeight="Bold"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto"
                         Background="White">
                <StackPanel x:Name="MathOutputPanel" 
                           Margin="20"
                           Background="White">
                    <TextBlock Text="Mathematical results will appear here"
                              FontStyle="Italic"
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,50"/>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
